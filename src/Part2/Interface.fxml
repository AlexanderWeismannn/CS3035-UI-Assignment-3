<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import Part2.MyFlowPane?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
       <MyFlowPane prefWidth="600" prefHeight="600" />

   </center>
    <right>
        <VBox alignment="CENTER">
            <ListView fx:id = "listView" VBox.vgrow="ALWAYS" />
            <Button fx:id="addFace" >Add Face</Button>
            <Button fx:id="clearAll">Clear All</Button>

        </VBox>
    </right>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <Label text="Test" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
